# Root includes for all Nimbus Makefiles

CPP = g++
CPP_FLAGS = -Wall -g -pg
IFLAGS = -I/opt/local/include
LFLAGS = 

NIMBUS_CCLINT = ${NIMBUS_ROOT}/tools/cpplint.py
NIMBUS_FILENAMES = ${NIMBUS_ROOT}/tools/cppfiles.sh

fcheck:
	@${NIMBUS_FILENAMES}

lint:
	@${NIMBUS_CCLINT} *.h *.cc

check: fcheck lint

